<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Evidento</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>    
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="font-montserrat dark:bg-gray-800">
    <%- include('partials/_projectManagerNav', { user: user }) %>
    <button onclick="toggleDarkMode()" class="p-2 m-2 bg-blue-500 dark:bg-gray-500 rounded-lg">
        <img src="/images/dark.svg" class="w-8 invert" alt="">
      </button>

    <h1 class="px-6 mt-8 text-center text-3xl dark:text-slate-100 md:text-start md:text-3xl">
        My projects
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-2 text-slate-100 my-8 gap-4">
        <% projects.forEach(project => { %>
            <div class="p-4 m-4 bg-blue-500 dark:bg-blue-900 rounded-md">
                <h1 class="md:text-3xl text-xl mb-4 font-medium">
                    <%= project.project_name %>
                </h1>
                <p class="mb-4 md:text-xl">
                    <%= project.project_description %>
                </p>
                <div class="flex justify-between">
                    <form action="/project_manager_dashboard/view_project" method="get">
                        <input type="hidden" name="projectName" value="<%= project.project_name %>">
                        <input type="hidden">
                        <button type="submit" class="p-2 transition-all duration-150 ease-in-out md:text-xl dark:bg-blue-900 dark:border dark:border-blue-800 dark:hover:bg-blue-800 hover:bg-blue-600 bg-blue-400 rounded-md">
                            View Project
                        </button>
                    </form>
                    <form action="/project_manager_dashboard/get_project_report">
                        <input type="hidden" name="projectManagerId" value="<%= user.id %>">
                        <input type="hidden" name="projectName" value="<%= project.project_name %>">
                        <button type="submit" class="p-2 transition-all duration-150 ease-in-out md:text-xl dark:bg-blue-900 dark:border dark:border-blue-800 dark:hover:bg-blue-800 hover:bg-blue-600 bg-blue-400 rounded-md">
                            Project Report
                        </button>
                    </form>
                </div>
                
            </div>
        <% }); %>
    </div>

</body>
</html>