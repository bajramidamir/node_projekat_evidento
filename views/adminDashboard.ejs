<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Evidento - Admin</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>    
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
  </head>
  <body class="font-montserrat dark:bg-gray-800">
    <%- include('partials/_adminNav', { user: user }) %>

    <button onclick="toggleDarkMode()" class="p-2 mx-4 my-2 md:p-2 md:m-2 bg-blue-500 dark:bg-gray-500 rounded-lg">
      <img src="/images/dark.svg" class="w-8 invert" alt="">
    </button>

    <div class="grid grid-cols-1 md:grid-cols-2">

      <div class="md:p-4 md:m-8 p-4 m-4 h-64 rounded-lg text-2xl bg-blue-500 dark:bg-blue-900 text-slate-100">
        <h1 class="mb-2 text-3xl font-medium">
          Overview
        </h1>
        <p>Total users: <%= userCount.count - 1 %></p>
        <p>Total projects: <%= projectCount.count %></p>
      </div>

      <div class="md:p-4 md:m-8 p-4 m-4 h-64 overflow-scroll rounded-lg text-2xl bg-blue-500 dark:bg-blue-900 text-slate-100">
        <h1 class="mb-2 text-3xl font-medium">
          Users
        </h1>
        <% allUsers.forEach(user => { %>
          <p>
            <%= user.username %>
          </p>
        <% }); %>
      </div>

      <div class="md:p-4 md:m-8 p-4 m-4 h-64 overflow-scroll rounded-lg text-2xl bg-blue-500 dark:bg-blue-900 text-slate-100">
        <h1 class="mb-2 text-3xl font-medium">
          Projects
        </h1>
        <% allProjects.forEach(project => { %>
          <p>
            <%= project.project_name %>
          </p>
        <% }); %>
      </div>

      <div class="md:p-4 md:m-8 p-4 m-4 h-64 overflow-scroll rounded-lg text-2xl bg-blue-500 dark:bg-blue-900 text-slate-100">
        <h1 class="mb-2 text-3xl font-medium">
          Reports
        </h1>
        <form action="/admin_dashboard/get_report" method="post">
          <select name="reportNumber" class="p-2 bg-white rounded-lg text-gray-800 dark:bg-gray-600 dark:text-slate-100">
            <option value="1">Get employee task hours</option>
            <option value="2">Get project managers and projects</option>
          </select>
          <button type="submit" class="p-2 bg-blue-500 dark:bg-blue-900 dark:hover:bg-blue-800 dark:border dark:border-blue-800  hover:bg-blue-600  rounded-md block my-4">
            Submit
          </button>
        </form>
        
      </div>


    </div>
  </body>
</html>

